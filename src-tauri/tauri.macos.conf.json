{
  "$schema": "https://schema.tauri.app/config/2",
  "bundle": {
    "macOS": {
      "infoPlist": "Info.plist",
      "entitlements": "entitlements.plist"
    }
  },
  "app": {
    "windows": [
      {
        "title": "PrivacyScribe",
        "width": 1000,
        "height": 700,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "decorations": false,
        "alwaysOnTop": false,
        "transparent": true,
        "shadow": true,
        "dragDropEnabled": true,
        "windowEffects": {
          "effects": ["hudWindow"],
          "radius": 12.0,
          "state": "active"
        }
      }
    ]
  }
}
